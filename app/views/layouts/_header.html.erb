<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_url, class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.home"), root_url %></li>
        <li><%= link_to t("static_pages.home.help"), help_url %></li>
        <% if logged_in? %>
          <li><%= link_to t("login.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to current_user.name, "#",
              "data-toggle": "dropdown", class: "dropdown-toggle" %>
            <ul class="dropdown-menu">
              <li><%= link_to t("login.profile"), current_user %></li>
              <li><%= link_to t("login.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("login.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
