<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.micropost_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t "micropost.posted" %><%= micropost.created_at.to_s %>
      <%= t "micropost.ago" %>
    <% if current_user? micropost.user %>
      <%= link_to t("update_user.delete"), micropost, method: :delete,
        data: {confirm: t("update_user.sure")} %>
    <% end %>
  </span>
</li>
