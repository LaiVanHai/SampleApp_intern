<% provide :title, t("update_user.edit") %>
<% provide :button_text, t("update_user.save") %>
<h1><%= t "update_user.update" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", user: @user %>
    <br>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("update_user.change"), "http://gravatar.com/emails", target: "_blank" %>
    </div>
  </div>
</div>
